# In all environments, the following files are loaded if they exist:
# .env.local, .env.local.php, .env.*.local
# See https://symfony.com/doc/current/configuration.html#selecting-the-active-environment

# JWT Authentication
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=YourSecurePassphraseHere

# Database
DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/db_name?serverVersion=8.0"

# Environment
APP_ENV=prod
APP_SECRET=YourAppSecretHere
APP_DEBUG=0

# CORS
CORS_ALLOW_ORIGIN=http://localhost:5173

# API Platform
API_PLATFORM_TITLE="Restaurant API"
API_PLATFORM_DESCRIPTION="API for managing restaurant operations"
API_PLATFORM_VERSION="1.0.0"
